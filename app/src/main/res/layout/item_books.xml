<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="myBooks"
            type="com.client.soulstudio.data.model.Item" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:maxLines="2"
                android:minLines="2"
                android:text="@{myBooks.volumeInfo.title}"
                app:layout_constraintStart_toEndOf="@+id/imgThumb"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="this is the title" />

            <ImageView
                android:id="@+id/imgThumb"
                android:layout_width="wrap_content"
                loadImage="@{myBooks.volumeInfo.imageLinks.thumbnail}"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:maxLines="3"
                android:minLines="3"
                android:text="@{myBooks.volumeInfo.description}"
                app:layout_constraintStart_toEndOf="@+id/imgThumb"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle"
                tools:text="Here is the desctipnio" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>